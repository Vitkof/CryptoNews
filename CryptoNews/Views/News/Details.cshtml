@model CryptoNews.Models.ViewModels.NewsDetailsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">

        </dt>
        <dd class="col-sm-10">
            <h3>@Model.Title</h3>
        </dd>

        <dt class="col-sm-2">

        </dt>
        <dd class="col-sm-10">
            @Model.Body
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PubDate)
        </dt>
        <dd class="col-sm-10">
            @Model.PubDate
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Model.Rating
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div class="row ">
    @await Html.PartialAsync("../Comments/NewComment")
    <button id="comments-show" class="btn btn-primary col-sm-12" onclick="toggleComments('@Model.Id')" type="button">
        Show comments
    </button>
    <div class="container">
        <div id="comments-container" class="row">
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/comments.js"></script>
    <script>getCommentsIntervalId('@Model.Id')</script>
}