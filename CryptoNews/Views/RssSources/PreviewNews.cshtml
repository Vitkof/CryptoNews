@model CryptoNews.Core.DTO.NewsDto

<div class="card col-sm-12 col-md-6 col-lg-4 new-card">
    <div class="preview-text-wrapper">
        <h5 class="preview-text">@Model.Title</h5>        
    </div>
    <div class="card-body">

        @*<h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>*@
        <p class="card-text">@Model.Description</p>
        
        <div id="preview-footer">
            <p>@Model.PubDate</p>
            
            <a asp-controller="News" asp-action="Details" asp-route-id="@Model.Id">Details</a> |
            

            <br>

            <a href="@Model.Url">Read in source</a>
        </div>
        

    </div>
</div>
