@using Microsoft.AspNetCore.Mvc.Rendering
@model CryptoNews.Models.ViewModels.CommentsListVM


@{
    Layout = null;
}

<div class="container">
    <div>
        @await Html.PartialAsync("NewComm")
    </div>

    <div id="comments-container" class="row">
        @foreach (var comment in Model.Comments)
        {
            @await Html.PartialAsync("Comment.cshtml", comment)
        }
    </div>
</div>